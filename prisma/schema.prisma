generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  fullName  String
  phone     String?
  role      Role     @default(OWNER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  
  userShops UserShop[]
  orders    Order[]  @relation("CreatedBy")
  staff     Staff[]  // THÊM DÒNG NÀY - quan hệ với Staff
}

model Shop {
  id           String       @id @default(cuid())
  name         String
  code         String       @unique
  status       ShopStatus   @default(ACTIVE)
  maxProducts  Int          @default(1000)
  maxStaff     Int          @default(5)
  businessType String?
  address      String?
  phone        String?
  email        String?
  taxCode      String?
  createdAt    DateTime     @default(now())

  users        UserShop[]
  products     Product[]
  orders       Order[]
  customers    Customer[]
  staff        Staff[]
  subscription Subscription?
}

model UserShop {
  userId   String
  shopId   String
  role     ShopRole @default(STAFF)
  
  user     User     @relation(fields: [userId], references: [id])
  shop     Shop     @relation(fields: [shopId], references: [id])

  @@id([userId, shopId])
}

model Product {
  id                String   @id @default(cuid())
  code              String
  name              String
  price             Float
  cost              Float    @default(0)
  stock             Int      @default(0)
  lowStockThreshold Int      @default(10)
  expiryDate        DateTime?
  category          String?
  unit              String   @default("cái")
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  deletedAt         DateTime?
  
  shopId     String
  shop       Shop     @relation(fields: [shopId], references: [id])
  
  orderItems OrderItem[]

  @@unique([shopId, code])
}

model Customer {
  id         String   @id @default(cuid())
  code       String
  name       String
  phone      String?
  email      String?
  address    String?
  totalSpent Float    @default(0)
  loyaltyPoints Int   @default(0)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  deletedAt  DateTime?
  
  shopId     String
  shop       Shop     @relation(fields: [shopId], references: [id])
  
  orders     Order[]

  @@unique([shopId, code])
  @@unique([shopId, phone])
}

model Order {
  id            String       @id @default(cuid())
  orderNumber   String       @unique
  totalAmount   Float
  discount      Float        @default(0)
  finalAmount   Float
  paymentMethod String
  orderStatus   OrderStatus  @default(PENDING)
  note          String?
  createdAt     DateTime     @default(now())
  
  shopId       String
  shop         Shop         @relation(fields: [shopId], references: [id])
  customerId   String?
  customer     Customer?    @relation(fields: [customerId], references: [id])
  createdById  String
  createdBy    User         @relation("CreatedBy", fields: [createdById], references: [id])
  
  items        OrderItem[]
}

model OrderItem {
  id         String  @id @default(cuid())
  quantity   Int
  price      Float
  subtotal   Float
  
  orderId    String
  order      Order   @relation(fields: [orderId], references: [id])
  productId  String
  product    Product @relation(fields: [productId], references: [id])
}

// THÊM MODEL STAFF MỚI
model Staff {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  
  shopId      String
  shop        Shop      @relation(fields: [shopId], references: [id])
  
  role        String    // MANAGER, SALES, INVENTORY, ACCOUNTING
  permissions Json      @default("[]")
  isActive    Boolean   @default(true)
  joinedAt    DateTime  @default(now())
  leftAt      DateTime?
  
  @@unique([userId, shopId])
  @@index([shopId])
  @@index([userId])
}

model Subscription {
  id         String    @id @default(cuid())
  planType   PlanType
  startedAt  DateTime  @default(now())
  expiresAt  DateTime
  status     SubStatus @default(ACTIVE)
  autoRenew  Boolean   @default(false)

  shopId     String    @unique
  shop       Shop      @relation(fields: [shopId], references: [id])
}

enum Role {
  OWNER
  STAFF
}

enum ShopRole {
  OWNER
  STAFF
}

enum ShopStatus {
  ACTIVE
  SUSPENDED
  EXPIRED
}

enum PlanType {
  FREE
  BASIC
  PREMIUM
}

enum SubStatus {
  ACTIVE
  EXPIRED
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}